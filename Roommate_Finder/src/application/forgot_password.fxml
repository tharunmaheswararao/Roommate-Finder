<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.ForgetPasswordController" stylesheets="@styles.css">
	<HBox alignment="CENTER">
		<VBox spacing="20" alignment="CENTER">
		    <Text text="Forgot Password" style="-fx-font-size: 20px;" />
		    <TextField fx:id="emailField" promptText="Enter your email" />
		    <Text fx:id="errorText" style="-fx-fill: red;" />
		    <Button text="Send OTP" onAction="#handleResetPassword" />
		    <Button text="Back to Login" onAction="#handleBackToLogin" />
		 </VBox>
	</HBox>
</VBox>
