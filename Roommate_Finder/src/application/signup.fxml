<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.SignupController" stylesheets="@styles.css">
	<HBox alignment="CENTER">
		<VBox spacing="20" alignment="CENTER">
			<Text text="Create a New Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #0056B3; " />
		    <TextField fx:id="firstNameField" promptText="First Name" />
		    <TextField fx:id="lastNameField" promptText="Last Name" />
		    <TextField fx:id="emailField" promptText="Email" />
		    <TextField fx:id="phoneField" promptText="Phone Number" />
		    <PasswordField fx:id="passwordField" promptText="Password" />
		    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
		    <Button text="Sign Up" onAction="#handleSignup" />
		    <Button text="Back to Login" onAction="#handleSigninRedirect" />
		</VBox>
	</HBox>
</VBox>
