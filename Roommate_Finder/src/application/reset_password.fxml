<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.ResetPasswordController">
    <Text text="Reset Password" style="-fx-font-size: 20px;" />
    <PasswordField fx:id="passwordField" promptText="New Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
    <Text fx:id="errorText" style="-fx-fill: red;" />
    <Button text="Reset Password" onAction="#handleResetPassword" />
</VBox>
